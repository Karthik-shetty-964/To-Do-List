<%-include("partials/header.ejs") %>

<main>
    <div class="box">
        <h1>
            <%= locals.date %>
        </h1>
    </div>
    <div class="box" style="background-color: white;">
        <% if(locals.toDoTodayText) {%>
            

           <% toDoTodayText.forEach(function (text, ind) { %>
            <form action="/deleteToday" method="POST">
                <div class="item">
                    <input type="checkbox" name = "checkbox" value = "<%=text._id%>" onChange="this.form.submit()">
                    <p><%= text.name%></p>
                </div>
                <input type="hidden" name = "listName" value="<%= date%>">
            </form>
           <% })%>
            
        <% } %>
        <form class = "item" action="/submitToday" method="POST">
            <input type="text" name="todoText" placeholder="New Item">
            <button type="submit" name = "list" value = "<%= date %>">+</button>
        </form>
    </div>
</main>
<%-include("partials/footer.ejs") %>