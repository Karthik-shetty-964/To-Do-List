<%-include("partials/header.ejs") %>

<main>
    <div class="box">
        <h1>
            Work Note
        </h1>
    </div>
    <div class="box" style="background-color: white;">
        <% if(locals.toDoWorkText) {%>
           <% toDoWorkText.forEach(function (text, ind) { %>
            <form action="/deleteWork" method="POST">
                <div class="item">
                    <input type="checkbox" name = "checkbox" value = "<%=text._id%>" onChange="this.form.submit()">
                    <p><%= text.name%></p>
                </div>
            </form>
           <% })%>
            
        <% } %>
        <form class = "item" action="/submitWork" method="POST">
            <input type="text" name="todoText" placeholder="New Item">
            <button type="submit" > + </button>
        </form>
    </div>
</main>
<%-include("partials/footer.ejs") %>